#include <stdio.h>
#include <unistd.h>

int main() {
    int pipefds1[2], pipefds2[2];
    int pid;
    int x = 5; // Parent's starting number
    int y;     // Where Parent stores the result
    int z;     // Where Child stores the received number

    pipe(pipefds1); // Pipe 1: Parent -> Child
    pipe(pipefds2); // Pipe 2: Child -> Parent

    pid = fork();

    if (pid != 0) { // Parent process
        close(pipefds1[0]); // Parent writes to Pipe 1
        close(pipefds2[1]); // Parent reads from Pipe 2

        printf("In Parent: Sending %d to Child via Pipe 1\n", x);
        write(pipefds1[1], &x, sizeof(x));

        // Parent blocks here until Child writes to pipe 2
        read(pipefds2[0], &y, sizeof(y));
        printf("In Parent: Received tripled value %d from Pipe 2\n", y);

        close(pipefds1[1]);
        close(pipefds2[0]);
    } else { // Child process
        close(pipefds1[1]); // Child reads from Pipe 1
        close(pipefds2[0]); // Child writes to Pipe 2

        read(pipefds1[0], &z, sizeof(z));
        printf("In Child: Received %d from Pipe 1\n", z);

        z = z * 3; // Perform the math
        printf("In Child: Sending %d back to Parent via Pipe 2\n", z);
        write(pipefds2[1], &z, sizeof(z));

        close(pipefds1[0]);
        close(pipefds2[1]);
    }
    return 0;
}
